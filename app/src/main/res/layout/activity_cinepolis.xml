<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cinepolis.Cinepolis">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="238dp"
        android:layout_height="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cin_polis"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:text="Nombre:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="182dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.749"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="99dp"
        android:layout_height="54dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Cantidad de Compradores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="172dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Compradores"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="91dp"
        android:layout_height="58dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="88dp"
        android:text="Cantidad de Boletos:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="170dp"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Boletos"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="199dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        android:text="Boletos a Pagar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:text="$xxx.xx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="96dp"
        android:layout_height="42dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="68dp"
        android:text="Tarjeta Cineco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:textColor="#000000"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="173dp"
        android:layout_height="54dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="24dp"
        android:text="Si"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="20dp"
        android:text="No"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

</androidx.constraintlayout.widget.ConstraintLayout>